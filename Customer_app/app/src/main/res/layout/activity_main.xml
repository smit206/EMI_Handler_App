<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:id="@+id/tvStatus" android:text="Status" android:textSize="18sp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnBlock" android:text="Block (EMI unpaid)"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnUnblock" android:text="Unblock (EMI paid)"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnAdminPin" android:text="Admin PIN / Uninstall"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
